{
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "import/no-unresolved": "off",
    "max-length": 0, // 0으로 설정하면 에러 검출 X
    "linebreak-style": 0,
    "object-curly-newline": 0,
    "eol-last": 0,
    "class-methods-use-this": 0,
    "no-param-reassign": 0,
    "no-useless-return": 0,
    "object-shorthand": 0,
  },
  "globals": {
    "jQuery": true,
    "$": true
  }
}